<head>
  <title>news</title>
  <link rel="stylesheet" href="{{.base}}/static/style.css">
</head>
<body>
  <div id="#content">

    {{ $base := .base }}
    <h1>news</h1>
    <p> Site map: </p>
    <ul class="mapList">
    {{ range $url, $desc := .sitemap }}
      <li class="mapItem">
        <a class="mapLink" href="{{$base}}{{$url}}"> {{$base}}{{$url}}</a>
        <span class="mapDesc">{{$desc}}</span>
      </li>
    {{ end }}
    </ul>

  </div>
</body>
</html>
