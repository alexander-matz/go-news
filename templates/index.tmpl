<html>
<!-- vim: ts=2 sts=2 sw=2 et ai
-->
<head>
  <title>news</title>
  <link rel="stylesheet" href="{{.base}}/static/style.css">
</head>
<body>
  <div id="content">

    {{ $base := .base }}
    <h1><a href="{{$base}}/">news</a>
    </h1>

    <ul class="mapList">
    {{ range $url, $desc := .sitemap }}
      <li class="mapItem">
        <span class="mapLink"> <a href="{{$base}}{{$url}}"> {{$base}}{{$url}}</a> </span>
        <span class="mapDesc">{{$desc}}</span>
      </li>
    {{ end }}
    </ul>

  </div>
</body>
</html>
