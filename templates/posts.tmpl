<html>
<!-- vim: ts=2 sts=2 sw=2 et ai
-->
<head>
  <title>news</title>
  <link rel="stylesheet" href="{{.base}}/static/style.css">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <div id="content">

    {{ $feeds := .feeds }}
    {{ $base := .base }}
    <h1><a href="{{$base}}/">news</a>
    : latest</h1>

    <ul class="postList">
    {{ range $_, $post := .posts }}
      <li class="postItem">
        <div class="postLink">
          <a href="{{$base}}/a/{{ hashID $post.ID }}"> {{ $post.Title }} </a>
        </div>
        <span class="postDate" title="{{ date $post.Date}}" > {{ when $post.Date }} </span>
        <span class="postFeed"> {{ (index $feeds $post.Feed).Handle }} </span>
        ( <a class="postOrigLink" href="{{ $post.Link }}"> source </a> )
      </li>
    {{ end }}
    </ul>

  </div>
</body>
</html>
