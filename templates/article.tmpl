<html>
<!-- vim: ts=2 sts=2 sw=2 et ai
-->
<head>
  <title>news</title>
  <link rel="stylesheet" href="{{.base}}/static/base.css">
  <link rel="stylesheet" href="{{.base}}/static/site.css">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <div id="content">

    {{ $base := .base }}
    <h1><a href="{{$base}}/">news</a>
    : {{ .post.Title }}</h1>
      <div class="articleInfo">
        <span class="postDate" title="{{ date .post.Date}}" > {{ when .post.Date }} </span>
        <span class="postFeed"> {{ .feed.Handle }} </span>
        <a class="postOrigLink" href="{{ .post.Link }}"> source </a>
      </div>
    {{ .content }}
  </div>
</body>
</html>
